<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#2C2C2C"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/droneImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="Drone Image"
            android:src="@drawable/ic_drone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="#E0E0E0" />

        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/detailArrow"
            app:layout_constraintStart_toEndOf="@id/droneImage"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/droneName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model: DJI Phantom X Pro"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/droneStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: ACTIVE"
                android:textColor="#A5D6A7"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/droneDetectionBool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Detection: None"
                android:textColor="#FFAB91"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/droneDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP: 192.168.1.10 | S/N: EXP-001"
                android:textColor="#BDBDBD"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/droneLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lat: 40.71, Lon: -74.00"
                android:textColor="#BDBDBD"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/droneDetection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Detection: 2025-12-14 15:30"
                android:textColor="#FFAB91"
                android:textSize="11sp"
                android:textStyle="italic"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/detailArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            android:contentDescription="Go to details"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#757575" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>